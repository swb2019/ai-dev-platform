{
  "extends": "../../packages/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@fixtures/*": ["../../fixtures/*"]
    },
    "types": ["@types/node", "next", "jest", "@testing-library/jest-dom"],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "./src/**/*",
    ".next/types/**/*.ts",
    "jest.setup.ts",
    "playwright.config.ts",
    "tailwind.config.ts",
    "tests/**/*",
    "../../fixtures/**/*"
  ],
  "exclude": ["node_modules"]
}
